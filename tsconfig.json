{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@prisma/*": ["./src/prisma/*"] // Update to point to src/prisma
    }
  },
  "include": ["src/**/*"], // Remove prisma/**/* since itâ€™s now under src/
  "exclude": ["node_modules"]
}
