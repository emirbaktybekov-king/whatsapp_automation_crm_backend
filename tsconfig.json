{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src", // Change from "./" to "./src"
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"], // Update to point to src
      "@prisma/*": ["src/prisma/*"]
    }
  },
  "include": ["src/**/*", "src/prisma/**/*"],
  "exclude": ["node_modules"]
}
